//Print number pyramid

module tab;
  
  
  initial begin
    

    
    for(int i=0; i<=5; i++)begin
      for(int j=i; j<=5;j++)begin
        //if(j<(3-i))
          $write(" ");
      end
      for(int k=1; k<=i; k++)begin
        $write("%0d ",k);
       
        
      end
      $display();
    end
    

    end
    endmodule 
